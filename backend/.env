# Emergency Relief App Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/emergency_relief

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_change_in_production
JWT_EXPIRE=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Sync Configuration
SYNC_INTERVAL_MS=300000
MAX_OFFLINE_DAYS=7
CACHE_TTL_HOURS=24

# Twilio Configuration (for online emergency calls)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# WebSocket Configuration
WEBSOCKET_PORT=3001

# Firebase Configuration (for push notifications)
FIREBASE_SERVER_KEY=your_firebase_server_key

# Emergency Services Numbers (configurable by region)
POLICE_NUMBER=100
FIRE_NUMBER=101
AMBULANCE_NUMBER=102
DISASTER_NUMBER=108
WOMEN_HELPLINE=1091
CHILD_HELPLINE=1098

# Buzzer Configuration
BUZZER_DURATION=5000
BUZZER_MAX_DURATION=30000
VIBRATION_ENABLED=true
SOUND_ENABLED=true